<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Schools</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Contact details</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td><%= school.address %></td>
              <td><%= school.contact_details %></td>
              <td><%= link_to 'Show', admin_school_path(school), class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_admin_school_path(school), class: "btn btn-warning" %></td>
              <% if current_user_can?('schools_create')%>
              <td><%= link_to 'Destroy', ([:admin,school]), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              <%end%>

            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <% if current_user_can?('schools_create')%>
        <%= link_to 'New School', new_admin_school_path, class: "btn btn-success" %>
      <%end%>
    </div>
  </div>
</div>
