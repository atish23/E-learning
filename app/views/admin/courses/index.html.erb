<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      <% end %>

      <h1 class="my-4">Courses</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Duration</th>
            <th>School</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.description %></td>
              <td><%= course.duration %></td>
              <td><%= course.school.name %></td>
              <td><%= link_to 'Show', admin_course_path(course), class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_admin_course_path(course), class: "btn btn-secondary" %></td>
              <td><%= link_to 'Destroy', [:admin, course], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="my-4">
        <%= link_to 'New Course', new_admin_course_path, class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>
