      <%= form_for [:admin, @course] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :duration %>
          <%= f.number_field :duration, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :school_id %>
          <% if current_user.schooladmin? %>
            <%= f.collection_select :school_id, current_user.schools, :id, :name, {}, class: "form-control" %>
          <% else %>
            <%= f.collection_select :school_id, School.all, :id, :name, {}, class: "form-control" %>
          <% end %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>