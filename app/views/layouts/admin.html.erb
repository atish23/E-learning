<!DOCTYPE html>
<html>
  <head>
    <title>ELearning Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">ELearning Dashboard</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item <%= current_page?(admin_schools_path) ? 'active' : '' %>">
              <%= link_to 'Schools', admin_schools_path, class: 'nav-link' %>
            </li>
            <% if current_user.admin? %>
            <li class="nav-item <%= current_page?(admin_users_path) ? 'active' : '' %>">
              <%= link_to 'Users', admin_users_path, class: 'nav-link' %>
            </li>
            <%end%>
            <% if current_user.admin? %>
            <li class="nav-item <%= current_page?(admin_school_admins_path) ? 'active' : '' %>">
              <%= link_to 'SchoolAdmins', admin_school_admins_path, class: 'nav-link' %>
            </li>
            <%end%>
            <li class="nav-item <%= current_page?(admin_batches_path) ? 'active' : '' %>">
              <%= link_to 'Batches', admin_batches_path, class: 'nav-link' %>
            </li>

            <li class="nav-item <%= current_page?(admin_courses_path) ? 'active' : '' %>">
              <%= link_to 'Courses', admin_courses_path, class: 'nav-link' %>
            </li>
            
            <li class="nav-item <%= current_page?(admin_enrolment_requests_path) ? 'active' : '' %>">
              <%= link_to 'Enrollment Requests', admin_enrolment_requests_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="navbar-text">Signed in as <%= current_user.email %></span>
              </li>
              <li class="nav-item">
                <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Content -->
    <div class="container mt-4">
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
    </div>

    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.slim.min.js', 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js', 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' %>
  </body>
</html>
